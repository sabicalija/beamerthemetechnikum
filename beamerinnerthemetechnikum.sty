% Beamer Inner Theme Technikum
% Defines inner elements: title page, lists, blocks, etc.
\ProvidesPackage{beamerinnerthemetechnikum}[2025/11/03 Technikum Inner Theme]

\mode<presentation>

% Custom command for email
\newcommand{\email}[1]{\def\insertemail{#1}}
\newcommand{\insertemail}{}  % Initialize empty

% Title page template
\defbeamertemplate*{title page}{technikum}[1][]
{
    \vbox{}
    \vfill
    \begingroup
    \centering
    \begin{beamercolorbox}[sep=8pt,center,#1]{title}
        \usebeamerfont{title}\inserttitle\par%
        \ifx\insertsubtitle\@empty%
        \else%
            \vskip0.25em%
            {\usebeamerfont{subtitle}\usebeamercolor[fg]{subtitle}\insertsubtitle\par}%
        \fi%     
    \end{beamercolorbox}%
    \vskip1em\par
    \begin{beamercolorbox}[sep=8pt,center,#1]{author}
        \usebeamerfont{author}\insertauthor
    \end{beamercolorbox}
    \ifx\insertemail\@empty%
    \else%
        \begin{beamercolorbox}[sep=8pt,center,#1]{author}
            \usebeamerfont{author}\small\insertemail
        \end{beamercolorbox}
    \fi%
    \begin{beamercolorbox}[sep=8pt,center,#1]{institute}
        \usebeamerfont{institute}\insertinstitute
    \end{beamercolorbox}
    \begin{beamercolorbox}[sep=8pt,center,#1]{date}
        \usebeamerfont{date}\insertdate
    \end{beamercolorbox}\vskip0.5em
    \endgroup
    \vfill
}

\mode<all>
