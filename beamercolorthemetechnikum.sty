% Beamer Color Theme Technikum
% Defines color scheme for FHTW branding
\ProvidesPackage{beamercolorthemetechnikum}[2025/11/03 Technikum Color Theme]

\mode<presentation>

% FHTW Corporate Identity Colors
% Use dashed names for readability and to match corporate tokens (e.g. `fhtw-green`)
\definecolor{fhtw-green}{RGB}{139,179,29}   % PANTONE 376C - #8BB31D
\definecolor{fhtw-blue}{RGB}{0,100,156}     % PANTONE 301C - #00649C
\definecolor{fhtw-gray}{RGB}{114,120,122}   % PANTONE 431C - #72777A

% Apply colors to Beamer elements (adjust as needed)
\setbeamercolor{title}{fg=white, bg=black}
\setbeamercolor{subtitle}{fg=white, bg=black}
\setbeamercolor{author}{fg=white, bg=black}
\setbeamercolor{institute}{fg=white, bg=black}
\setbeamercolor{date}{fg=white, bg=black}

\setbeamercolor{frametitle}{fg=fhtw-blue, bg=fhtw-blue!20}
\setbeamercolor{framesubtitle}{fg=fhtw-blue, bg=fhtw-blue!20}
\setbeamercolor{structure}{fg=fhtw-blue}

% Block title colors
\setbeamercolor{block title}{fg=white, bg=fhtw-green}

% Itemize bullet colors for different levels
\setbeamercolor{item}{fg=fhtw-green}
\setbeamercolor{subitem}{fg=fhtw-gray}
\setbeamercolor{subsubitem}{fg=fhtw-blue}

% Footer/footline colors
\setbeamercolor{footline rule}{fg=fhtw-gray}
\setbeamercolor{footline background}{bg=fhtw-gray!20}
\setbeamercolor{author in head/foot}{fg=fhtw-gray}
\setbeamercolor{title in head/foot}{fg=fhtw-gray}
\setbeamercolor{page number in head/foot}{fg=fhtw-gray}

% Frametitle rule color
\setbeamercolor{frametitle rule}{fg=fhtw-blue}

\mode<all>
