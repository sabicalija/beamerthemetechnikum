% Title page variant: split
% Left half: content (right-aligned), right half: space for logo/branding
\defbeamertemplate{title page}{split}
{
    \begin{tikzpicture}[remember picture, overlay, every node/.style={anchor=east, align=right, text width=0.5\paperwidth}]
        % Title
        \node (title) at ([yshift=0.25\paperheight] current page.center) {
            \usebeamerfont{title}\usebeamercolor[fg]{title}\inserttitle
        };

        % Subtitle
        \ifx\insertsubtitle\@empty\else
            \node[below=0.5em of title] (subtitle) {
                \usebeamerfont{subtitle}\usebeamercolor[fg]{subtitle}\insertsubtitle
            };
        \fi

        % Author
        \ifx\insertsubtitle\@empty
            \node[below=2em of title] (author) {
                \usebeamerfont{author}\usebeamercolor[fg]{author}\insertauthor
            };
        \else
            \node[below=2em of subtitle] (author) {
                \usebeamerfont{author}\usebeamercolor[fg]{author}\insertauthor
            };
        \fi

        % Email
        \ifx\insertemail\@empty\else
            \node[below=0.3em of author] (email) {
                \usebeamerfont{author}\usebeamercolor[fg]{author}\small\insertemail
            };
        \fi

        % Institute
        \ifx\insertemail\@empty
            \node[below=1.5em of author] (institute) {
                \usebeamerfont{institute}\usebeamercolor[fg]{institute}\insertinstitute
            };
        \else
            \node[below=1.5em of email] (institute) {
                \usebeamerfont{institute}\usebeamercolor[fg]{institute}\insertinstitute
            };
        \fi

        % Date
        \node[below=0.5em of institute] (date) {
            \usebeamerfont{date}\usebeamercolor[fg]{date}\insertdate
        };

        % Right half - placeholder for logo/branding
        % TODO: Add logo when available
        % \node[anchor=center] at ([xshift=0.25\paperwidth] current page.center) {
        %     \includegraphics[width=0.3\paperwidth]{logo}
        % };
    \end{tikzpicture}
}
